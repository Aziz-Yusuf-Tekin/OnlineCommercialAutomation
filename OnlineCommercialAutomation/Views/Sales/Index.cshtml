@using OnlineCommercialAutomation.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <td>ID</td>
            <th>Ürün</th>
            <th>Müşteri</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Satışlar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.SalesMovementID
            </td>
            <td>
                @k.Product.ProductName
            </td>
            <td>
                @k.Customer.CustomerName @k.Customer.CustomerSurname
            </td>
            <td>
                @k.Employee.EmployeeName @k.Employee.EmployeeSurname
            </td>
            <td>
                @k.Quantity
            </td>
            <td>
                @k.Price
            </td>
            <td>
                @k.TotalAmount
            </td>
            <td>
                @k.Date
            </td>
            <td>
                <a href="/Sales/SalesBring/@k.SalesMovementID" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Sales/SalesDetail/@k.SalesMovementID" class="btn btn-default" style="background-color:darkslateblue; color:white">Satışlar</a>
            </td>
        </tr>
    }
</table>
<a href="/Sales/SalesAdd" class="btn btn-primary">Yeni Satış Yap</a>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

