@model OnlineCommercialAutomation.Models.Classes.Employee
@{
    ViewBag.Title = "EmployeeBring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Personel Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("EmployeeUpdate", "Employee", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.EmployeeID)
        @Html.LabelFor(x => x.EmployeeName)
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.EmployeeSurname)
        @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.EmployeeImage)
        @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Department)
        @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
