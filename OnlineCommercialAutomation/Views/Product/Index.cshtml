@using OnlineCommercialAutomation.Models.Classes
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <p>
        Ürün Adı : @Html.TextBox("parameter")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductName</td>
            <td>@p.Brand</td>
            <td>@p.Stock</td>
            <td>@p.PurchasePrice ₺</td>
            <td>@p.SalePrice ₺</td>
            <td>@p.Category.CategoryName</td>
            <td>
                <a href="/Product/ProductDelete/@p.ProductID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Product/ProductBring/@p.ProductID" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Product/DoSales/@p.ProductID" class="btn btn-default" style="background-color:darkcyan; color:white">Satış Yap</a>
            </td>
        </tr>
    }
</table>
<a href="/Product/ProductAdd/" class="btn btn-primary">Yeni Ürün</a>

