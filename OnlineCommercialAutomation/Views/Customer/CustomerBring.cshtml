@model OnlineCommercialAutomation.Models.Classes.Customer
@{
    ViewBag.Title = "CustomerBring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Müşteri Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("CustomerUpdate", "Customer", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CustomerID)
        @Html.LabelFor(x => x.CustomerName)
        @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CustomerName, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.CustomerSurname)
        @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CustomerSurname, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.CustomerCity)
        @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CustomerCity, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.CustomerMail)
        @Html.TextBoxFor(x => x.CustomerMail, new { @class = "form-control" }) @Html.ValidationMessageFor(x => x.CustomerMail, "", new { @style = "color:red" })
        <br />
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
